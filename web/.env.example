# Frontend Environment Variables Configuration
# Copy this file to .env and update the values as needed

# ============================================================================
# API Configuration
# ============================================================================
# Backend API base URL (without trailing slash)
VITE_API_URL=http://localhost:3015/api

# ============================================================================
# Development Server Configuration
# ============================================================================
# Port number for the Vite development server
VITE_PORT=3580

# Enable network access (true/false)
# Set to 'true' to access dev server from other devices on the network
VITE_HOST=true

# ============================================================================
# Optional: Production Configuration
# ============================================================================
# Uncomment and set these for production builds
# VITE_API_URL=https://api.yourdomain.com/api
# VITE_PORT=3000
# VITE_HOST=false
